# Example environment variables for the FastAPI application

# App settings
APP_NAME=FastAPI Background Tasks Server
DEBUG=false
PORT=8000
HOST=0.0.0.0

# API documentation
API_TITLE=Background Tasks API
API_DESCRIPTION=API for running background tasks asynchronously
API_VERSION=1.0.0

# Security settings
# CORS_ORIGINS can be a comma-separated list or a JSON array string
# Examples:
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:5173
# Or alternatively:
# CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
# Or to allow all origins (not recommended for production):
# CORS_ORIGINS=*

SECRET_KEY=your-secret-key-here
AUTH_ENABLED=false

# Storage settings
STORAGE_TYPE=file
FILE_STORAGE_PATH=./data
# If using Redis:
# STORAGE_TYPE=redis
# REDIS_URL=redis://localhost:6379/0

# Logging settings
LOG_LEVEL=INFO
LOG_DIR=./logs
LOG_RETENTION_DAYS=30

# Task settings
TASK_TIMEOUT=3600
MAX_CONCURRENT_TASKS=10 